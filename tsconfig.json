{
  "compilerOptions": {
    "sourceMap": false,
    "module": "ES6", // 模块配置
    "noImplicitAny": true, // 是否默认禁用 any
    "removeComments": true, // 是否移除注释
    "types": [
      // 默认引入的类型声明
      "node"
    ],
    "baseUrl": ".", // 工作根目录
    "paths": {
      // ~/ 指向 server/types，types 目录下都是 types 文件，所以不会编译产出
      "~/*": ["./types/*", "./index"]
    },
    "esModuleInterop": true,
    "target": "es6", // 编译目标
    "outDir": "build" // 输出目录
    // "declaration": true, // 是否自动创建类型声明
    // "declarationDir":"types"
  }
  // 此配置生效范围
  // "include": ["src/**/*"]
}
